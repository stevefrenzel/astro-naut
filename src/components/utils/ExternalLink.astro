---
export interface Props {
  fontSize?: string;
  href: string;
  iconSize?: string;
  name: string;
}

const { fontSize, href, iconSize = "24px", name } = Astro.props;
---

<a
  aria-label={`${name} (external link)`}
  class="external-link"
  href={href}
  rel="noopener noreferrer"
>
  {name}
  <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g clip-path="url(#clip0_6_12319)">
      <path
        class="light"
        d="M19 19H5V5H12V3H5C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H19C20.1 21 21 20.1 21 19V12H19V19ZM14 3V5H17.59L7.76 14.83L9.17 16.24L19 6.41V10H21V3H14Z"
      ></path>
      <path
        class="dark"
        d="M19 19H5V5H12V3H5C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H19C20.1 21 21 20.1 21 19V12H19V19ZM14 3V5H17.59L7.76 14.83L9.17 16.24L19 6.41V10H21V3H14Z"
      ></path>
    </g>
  </svg>
</a>

<style define:vars={{ fontSize, iconSize }}>
  a {
    align-items: center;
    color: var(--color-purple-light);
    display: inline-flex;
    font-size: var(--fontSize);
    gap: var(--space-3xs);
    width: fit-content;
  }

  svg {
    height: var(--iconSize);
    width: var(--iconSize);
  }

  .dark {
    fill: transparent;
  }

  .light {
    fill: var(--color-purple-light);
  }

  @media (prefers-color-scheme: light) {
    a {
      color: var(--color-purple-dark);
    }

    .dark {
      fill: var(--color-purple-dark);
    }

    .light {
      fill: transparent;
    }
  }
</style>
